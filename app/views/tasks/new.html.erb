<div class="container">
  <div class="row">
    <div class="instructions">
      <h2>Tell Sensei what you need him to remind you to do</h2>
      <p>
         Be polite and use complete sentences:
      </p>
    </div>
    <div class="new-task-form">
      <%= form_for @task, url: {:controller=>'tasks', :action=>'create'} do |f| %>
      <div class="form-group">
        <%= f.text_field :description, class:"form-control", size: "10" %>
      </div>

      <% if current_user %>
      <div class="form-group">
        <%= f.hidden_field :user_id, value: current_user.id %>
      </div>
      <% end %>
      <div class="form-group">
      <%= f.submit "Create Task", class: "btn btn-default btn-lg" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
