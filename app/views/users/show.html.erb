
<div class="container">
  <div class="dash-chunk">

    <div class="row"><!-- 1st row -->

        <div class="col-md-4 pic-thumb">
          <div class="circle format-profile-pic ui-widget-content" id="draggable">
            <%= image_tag current_user.image, class: "circle profile"  %>
          </div>
        </div>

        <div class="col-md-6 weather-widget draggable ui-widget-content" id="draggable">
          <h2>Good <%= @greeting %> Padawan</h2>

          <p>It's <%#= @temp %>Â°F in <%= current_user.location %></p>
        </div>
    </div> <!-- 1st row -->


    <div class="row"><!-- 2nd row -->
      <div class="inline-row">

          <div class="col-md-6 commits-widget draggable ui-widget-content" id="draggable">
            <div class="commits">
              <h2><%= @commits %></h2>
              <p>commits today</p>
            </div>
          </div>

        <div class="col-md-4">

        </div>

      </div>
    </div>

<div class="row"> <!-- 3rd row -->

      <div class="inline-row">

          <div class="col-md-8 reminders-widget draggable ui-widget-content" id="draggable">
            <div class="reminders">
              <h2>To Dos</h2>

                <% @tasks.each do |task| %>
                <p> <%= get_yoda_speak(task.description) %> </p>
                <% end %>

            </div>
          </div>

        <div class="col-md-4">

        </div>

      </div>
    </div>

    </div> <!-- 2nd row -->
  </div>
</div>
</div>
