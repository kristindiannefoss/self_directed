
<div class="container">
  <div class="dash-chunk">

    <div class="row"><!-- 1st row -->

        <div class="col-md-4 pic-thumb">
          <div class="circle format-profile-pic ui-widget-content" id="draggable">
            <%= image_tag current_user.image, class: "circle profile"  %>
          </div>
        </div>

        <div class="col-md-6 weather-widget draggable ui-widget-content" id="draggable">
          <div class="filler">
            <h2>Good <%= @greeting %> Padawan</h2>

            <p>It's <%= @temp %>Â°F in <%= current_user.location %></p>
          </div>
        </div>
    </div> <!-- 1st row -->


    <div class="row"><!-- 2nd row -->

      <div class="commits-widget draggable ui-widget-content" id="draggable">
        <div class="commits">
          <div class="today-count">
            <h1><%= @commits %></h1>
          </div>
          <div class="commit-text">
            <p>
              Commits Today
            </p>
          </div>
        </div>
      </div>

      <div class="inline-row">

          <div class="col-md-8 reminders-widget draggable ui-widget-content" id="draggable">
            <div class="filler">
              <h2>Reminders:</h2>

                <% @tasks.each do |task| %>
                <p> <%= get_yoda_speak(task.description) %> </p>
                <% end %>

            </div>
          </div>

      </div>
    </div><!-- 2nd row -->

    <div class="row"><!-- 3rd row -->

      <div class="inline-row">


                <% if @commits == 0 %>
                  <div class="col-md-8 praise-insult-widget draggable ui-widget-content" id="draggable">
                    <div class="filler">
                      <h2>You Need Tough Love?</h2>
                      Work Harder, Do More, Complain Less
                      <p>
                        <%= @insult %>
                      </p>
                    </div>
                  </div>
                <% else %>
                  <div class="col-md-8 praise-insult-widget draggable ui-widget-content" id="draggable">
                    <div class="filler">
                      <h2>Well Done, Yoda Loves You</h2>
                      <p>
                        <%= @praise %>
                      </p>
                    </div>
                  </div>

                <% end %>

        <h2>
        <div class="timer draggable ui-widget-content", id="draggable">
          <div class="time-format">Project<br>Timebox<br>

            <span id="time"></span></div>
            <p>
              <input type="button" value="start" onclick="START();">
              <input type="button" value="stop" onclick="STOP();">
              <input type="button" value="reset" onclick="RESET()">
            </p>
        </div>
      </h2>

      </div>
    </div><!-- 3rd row -->

  </div>
</div>
